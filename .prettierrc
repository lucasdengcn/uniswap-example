{
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "singleQuote": true,
                "bracketSpacing": true
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "singleQuote": true,
                "bracketSpacing": true
            }
        }
    ],
    "plugins": [
        "prettier-plugin-solidity"
    ]
}